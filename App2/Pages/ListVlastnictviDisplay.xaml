<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="App2.Pages.ListVlastnictviDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:App2.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="24" Spacing="24">
                <TextBlock Text="Výpis LV" Style="{ThemeResource TitleTextBlockStyle}" />

                <!-- Part A -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Part A (Vlastníci)" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Data.PartA, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                        Padding="16" Margin="0,0,0,12">
                                    <Grid ColumnSpacing="12" RowSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Jméno:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <TextBlock Text="{Binding Jmeno}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="0" Grid.Column="1"/>

                                        <TextBlock Text="Příjmení:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                        <TextBlock Text="{Binding Prijmeni}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="1" Grid.Column="1"/>

                                        <TextBlock Text="Bydliště:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="2" Grid.Column="0"/>
                                        <TextBlock Text="{Binding Bydliste}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="2" Grid.Column="1"/>

                                        <TextBlock Text="Podíl (setin):" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="3" Grid.Column="0"/>
                                        <TextBlock Text="{Binding PodilSetin}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="3" Grid.Column="1"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Part B -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Part B (Nemovitosti)" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Data.PartB, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                        Padding="16" Margin="0,0,0,12">
                                    <Grid ColumnSpacing="12" RowSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Číslo popisné:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <TextBlock Text="{Binding CisloPopisne}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="0" Grid.Column="1"/>

                                        <TextBlock Text="Ulice:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                        <TextBlock Text="{Binding Ulice}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="1" Grid.Column="1"/>

                                        <TextBlock Text="Katastrální území:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="2" Grid.Column="0"/>
                                        <TextBlock Text="{Binding NazevKu}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="2" Grid.Column="1"/>

                                        <TextBlock Text="Parcela:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="3" Grid.Column="0"/>
                                        <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="3" Grid.Column="1">
                                            <TextBlock Text="St." Visibility="{Binding JeStavebni, Converter={StaticResource BoolToVisibilityConverter}}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding ParcelniCislo}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Part B Majitel -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Part B Majitel (Omezení vlastnického práva)" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Data.PartBMajitel, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                        Padding="16" Margin="0,0,0,12">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding Popis}" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                        
                                        <Grid ColumnSpacing="12" RowSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Povinný:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="0" Grid.Column="1">
                                                <TextBlock Text="{Binding TitulPovinny}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding JmenoPovinny}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding PrijmeniPovinny}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding IcoPovinny}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding RodneCisloPovinny}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            </StackPanel>

                                            <TextBlock Text="Oprávněná parcela:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="1" Grid.Column="1">
                                                <TextBlock Text="St." Visibility="{Binding JeStavebniOpravnena, Converter={StaticResource BoolToVisibilityConverter}}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding ParcelniCisloOpravnena}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="/" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding CastParcelyOpravnena}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            </StackPanel>

                                            <TextBlock Text="Datum zřízení:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="2" Grid.Column="0"/>
                                            <TextBlock Text="{Binding DatumZrizeni}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="2" Grid.Column="1"/>

                                            <TextBlock Text="Datum právních účinků:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="3" Grid.Column="0"/>
                                            <TextBlock Text="{Binding DatumPravnichUcinku}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="3" Grid.Column="1"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Part B Parcela -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Part B Parcela (Jiné zápisy)" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Data.PartBParcela, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                        Padding="16" Margin="0,0,0,12">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding Popis}" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                        
                                        <Grid ColumnSpacing="12" RowSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Oprávněná:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="0" Grid.Column="1">
                                                <TextBlock Text="St." Visibility="{Binding JeStavebniOpravnena, Converter={StaticResource BoolToVisibilityConverter}}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding ParcelniCisloOpravnena}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="/" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding CastParcelyOpravnena}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            </StackPanel>

                                            <TextBlock Text="Povinná:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="1" Grid.Column="1">
                                                <TextBlock Text="St." Visibility="{Binding JeStavebniPovinna, Converter={StaticResource BoolToVisibilityConverter}}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding ParcelniCisloPovinna}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="/" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding CastParcelyPovinna}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            </StackPanel>

                                            <TextBlock Text="Datum zřízení:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="2" Grid.Column="0"/>
                                            <TextBlock Text="{Binding DatumZrizeni}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="2" Grid.Column="1"/>

                                            <TextBlock Text="Datum právních účinků:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="3" Grid.Column="0"/>
                                            <TextBlock Text="{Binding DatumPravnichUcinku}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="3" Grid.Column="1"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Part C -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Part C (Omezení vlastnického práva)" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Data.PartC, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                        Padding="16" Margin="0,0,0,12">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding Popis}" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                        
                                        <Grid ColumnSpacing="12" RowSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Oprávněná:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="0" Grid.Column="1">
                                                <TextBlock Text="St." Visibility="{Binding JeStavebniOpravnena, Converter={StaticResource BoolToVisibilityConverter}}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding ParcelniCisloOpravnena}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="/" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding CastParcelyOpravnena}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            </StackPanel>

                                            <TextBlock Text="Povinná:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                            <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="1" Grid.Column="1">
                                                <TextBlock Text="St." Visibility="{Binding JeStavebniPovinna, Converter={StaticResource BoolToVisibilityConverter}}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding ParcelniCisloPovinna}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="/" Style="{ThemeResource BodyTextBlockStyle}"/>
                                                <TextBlock Text="{Binding CastParcelyPovinna}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            </StackPanel>

                                            <TextBlock Text="Datum zřízení:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="2" Grid.Column="0"/>
                                            <TextBlock Text="{Binding DatumZrizeni}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="2" Grid.Column="1"/>

                                            <TextBlock Text="Datum právních účinků:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="3" Grid.Column="0"/>
                                            <TextBlock Text="{Binding DatumPravnichUcinku}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="3" Grid.Column="1"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Part D -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Part D (Jiné zápisy - Plomby)" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Data.PartD, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                        Padding="16" Margin="0,0,0,12">
                                    <Grid ColumnSpacing="12" RowSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Řízení:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="0" Grid.Column="1">
                                            <TextBlock Text="{Binding TypRizeniZkratka}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="-" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <HyperlinkButton Content="{Binding CisloRizeni}" Click="GoSpravniRizeni" Padding="0" Margin="-3,0,0,0"/>
                                            <TextBlock Text="/" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding RokRizeni}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                        </StackPanel>

                                        <TextBlock Text="Katastrální území:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                        <TextBlock Text="{Binding NazevKatastralnihoUzemi}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="1" Grid.Column="1"/>

                                        <TextBlock Text="Parcela:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="2" Grid.Column="0"/>
                                        <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="2" Grid.Column="1">
                                            <TextBlock Text="St." Visibility="{Binding JeStavebni, Converter={StaticResource BoolToVisibilityConverter}}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding ParcelniCislo}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="/" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding CastParcely}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Part F -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Part F (BPEJ)" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Data.PartF, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="8" BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                        Padding="16" Margin="0,0,0,12">
                                    <Grid ColumnSpacing="12" RowSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Parcela:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <StackPanel Orientation="Horizontal" Spacing="4" Grid.Row="0" Grid.Column="1">
                                            <TextBlock Text="St." Visibility="{Binding JeStavebni, Converter={StaticResource BoolToVisibilityConverter}}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding ParcelniCislo}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="/" Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding CastParcely}" Style="{ThemeResource BodyTextBlockStyle}"/>
                                        </StackPanel>

                                        <TextBlock Text="Hodnota:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                        <TextBlock Text="{Binding Hodnota}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="1" Grid.Column="1"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <Button
            Grid.Row="1"
            Content="Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="24"
            Click="GoBack" />
    </Grid>
</Page>
