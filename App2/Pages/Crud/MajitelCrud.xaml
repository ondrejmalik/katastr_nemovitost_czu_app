<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="App2.Pages.MajitelCrud"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:types="using:App2.Types"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="20">
                <TextBlock Text="Majitelé" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />
                <StackPanel Margin="0,0,0,20" BorderBrush="Gray" BorderThickness="1" Padding="10">
                    <TextBlock Text="Nový majitel" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                        <TextBlock Text="Jméno:" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" />
                        <TextBox Text="{x:Bind NewMajitel.Jmeno, Mode=TwoWay}" Width="200" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                        <TextBlock Text="Příjmení:" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" />
                        <TextBox Text="{x:Bind NewMajitel.Prijmeni, Mode=TwoWay}" Width="200" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                        <TextBlock Text="Titul:" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" />
                        <TextBox Text="{x:Bind NewMajitel.Titul, Mode=TwoWay}" Width="100" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                        <TextBlock Text="Bydliště:" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" />
                        <TextBox Text="{x:Bind NewMajitel.Bydliste, Mode=TwoWay}" Width="300" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                        <TextBlock Text="IČO:" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" />
                        <TextBox Text="{x:Bind NewMajitel.Ico, Mode=TwoWay}" Width="150" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                        <TextBlock Text="Rodné číslo:" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" />
                        <TextBox Text="{x:Bind NewMajitel.RodneCislo, Mode=TwoWay}" Width="150" />
                    </StackPanel>
                    <Button Content="Create" Click="CreateButtonClick" Margin="0,10,0,0" />
                </StackPanel>
                
                <ItemsControl ItemsSource="{x:Bind Data, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="types:MajitelData">
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                                    <TextBlock Text="ID:" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" />
                                    <TextBlock Text="{x:Bind Id}" VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                                    <TextBlock Text="Jméno:" FontWeight="SemiBold" VerticalAlignment="Center"
                                               Width="80" />
                                    <TextBox Text="{x:Bind Jmeno, Mode=TwoWay}" Width="200" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                                    <TextBlock Text="Příjmení:" FontWeight="SemiBold" VerticalAlignment="Center"
                                               Width="80" />
                                    <TextBox Text="{x:Bind Prijmeni, Mode=TwoWay}" Width="200" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                                    <TextBlock Text="Titul:" FontWeight="SemiBold" VerticalAlignment="Center"
                                               Width="80" />
                                    <TextBox Text="{x:Bind Titul, Mode=TwoWay}" Width="100" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                                    <TextBlock Text="Bydliště:" FontWeight="SemiBold" VerticalAlignment="Center"
                                               Width="80" />
                                    <TextBox Text="{x:Bind Bydliste, Mode=TwoWay}" Width="300" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                                    <TextBlock Text="IČO:" FontWeight="SemiBold" VerticalAlignment="Center" Width="80" />
                                    <TextBox Text="{x:Bind Ico, Mode=TwoWay}" Width="150" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,5">
                                    <TextBlock Text="Rodné číslo:" FontWeight="SemiBold" VerticalAlignment="Center"
                                               Width="80" />
                                    <TextBox Text="{x:Bind RodneCislo, Mode=TwoWay}" Width="150" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                    <Button Content="Update" Click="UpdateButtonClick" Tag="{x:Bind}" />
                                    <Button Content="Delete" Click="DeleteButtonClick" Tag="{x:Bind}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <Button
            Grid.Row="1"
            Content="Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="30"
            Margin="20"
            Click="GoBack" />

        <InfoBar x:Name="MessageInfoBar" Grid.RowSpan="2" IsOpen="False" VerticalAlignment="Bottom" Margin="20" />
    </Grid>
</Page>