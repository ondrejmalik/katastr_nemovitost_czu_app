<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="App2.Pages.ParcelaDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="24" Spacing="12">
                <TextBlock Text="Parcela" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,0,0,12" />

                <ItemsControl ItemsSource="{x:Bind Data, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="8" BorderThickness="1" 
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                    Padding="16" Margin="0,0,0,12">
                                <Grid ColumnSpacing="12" RowSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Parcelní číslo:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                    <TextBlock Text="{Binding ParcelniCislo}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="0" Grid.Column="1"/>

                                    <TextBlock Text="Část parcely:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                    <TextBlock Text="{Binding CastParcely}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="1" Grid.Column="1"/>

                                    <TextBlock Text="Číslo LV:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="2" Grid.Column="0"/>
                                    <HyperlinkButton Content="{Binding CisloLv}" Click="GoLv" Padding="0" Margin="-3,0,0,0"
                                                     Grid.Row="2" Grid.Column="1"/>

                                    <TextBlock Text="Číslo popisné:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="3" Grid.Column="0"/>
                                    <TextBlock Text="{Binding CisloPopisne}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="3" Grid.Column="1"/>

                                    <TextBlock Text="Ulice:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="4" Grid.Column="0"/>
                                    <TextBlock Text="{Binding Ulice}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="4" Grid.Column="1"/>

                                    <TextBlock Text="Výměra (m²):" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="5" Grid.Column="0"/>
                                    <TextBlock Text="{Binding VymeraMetruCtverecnich}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="5" Grid.Column="1"/>

                                    <TextBlock Text="Hodnota:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="6" Grid.Column="0"/>
                                    <TextBlock Text="{Binding Hodnota}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="6" Grid.Column="1"/>

                                    <TextBlock Text="Je stavební:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="7" Grid.Column="0"/>
                                    <TextBlock Text="{Binding JeStavebni}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="7" Grid.Column="1"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <Button
            Grid.Row="1"
            Content="Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="24"
            Click="GoBack" />
    </Grid>

</Page>