<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="App2.Pages.ParcelaDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="20">
                <TextBlock Text="Parcela" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

                <ItemsControl ItemsSource="{x:Bind Data, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Parcelní číslo:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding ParcelniCislo}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Část parcely:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding CastParcely}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Číslo LV:" FontWeight="SemiBold" />
                                    <HyperlinkButton Content="{Binding CisloLv}" Click="GoLv" Padding="0"
                                                     BorderThickness="0" Background="Transparent" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Číslo popisné:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding CisloPopisne}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Ulice:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Ulice}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Výměra (m²):" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding VymeraMetruCtverecnich}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Hodnota:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Hodnota}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Je stavební:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding JeStavebni}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <Button
            Grid.Row="1"
            Content="Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="30"
            Margin="20"
            Click="GoBack" />
    </Grid>

</Page>