<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="App2.Pages.SpravniRizeniDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="20">
                <TextBlock Text="Správní řízení" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />
                <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">

                    <TextBlock Text="Předmět" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <ItemsControl ItemsSource="{x:Bind Data.Predmet, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,4">
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock Text="Název:" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Nazev}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                        <TextBlock Text="Poznámka:" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Poznamka}" TextWrapping="Wrap" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                    <TextBlock Text="Operace" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <ItemsControl ItemsSource="{x:Bind Data.Operace, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,4">
                                    <TextBlock Text="Datum:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding OperaceDatum}" />
                                    <TextBlock Text="Popis:" FontWeight="SemiBold" Margin="10,0,0,0" />
                                    <TextBlock Text="{Binding OperacePopis}" TextWrapping="Wrap" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>


                <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                    <TextBlock Text="Účastníci" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <ItemsControl ItemsSource="{x:Bind Data.Ucastnici, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,4">
                                    <TextBlock Text="Typ:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding TypUcastnika}" />
                                    <TextBlock Text="Jméno:" FontWeight="SemiBold" Margin="10,0,0,0" />
                                    <TextBlock Text="{Binding UcastnikJmeno}" TextWrapping="Wrap" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Button
            Grid.Row="1"
            Content="Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="30"
            Margin="20"
            Click="GoBack" />
    </Grid>
</Page>