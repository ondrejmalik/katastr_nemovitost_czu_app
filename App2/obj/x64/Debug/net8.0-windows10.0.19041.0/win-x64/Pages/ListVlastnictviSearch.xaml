<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="App2.ListVlastnictviSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Text="LV" FontSize="45" Margin="20 20 20 20" TextAlignment="Center" />
                <StackPanel Orientation="Vertical" Width="300" Margin="0,10,0,0">
                    <TextBlock Text="Katastrální území" FontSize="18" Margin="0,0,0,4" />
                    <TextBox x:ConnectionId='5' x:Name="KatastralniUzemiTextBox" PlaceholderText="Enter katastrální území" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="300" Margin="0,10,0,0">
                    <TextBlock Text="Číslo LV" FontSize="18" Margin="0,0,0,4" />
                    <TextBox x:ConnectionId='4' x:Name="CisloLvTextBox" PlaceholderText="Enter číslo LV" />
                </StackPanel>

                <Button x:ConnectionId='3'
                    Content="Search!"
                    FontSize="30"
                    Margin="20"
                                     />
            </StackPanel>
            <Button x:ConnectionId='2'
                Content="Back"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontSize="30"
                Margin="20"
                               />
        </Grid>
    </Grid>
</Page>

