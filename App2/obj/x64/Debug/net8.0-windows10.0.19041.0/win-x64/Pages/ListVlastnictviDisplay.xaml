<?xml version="1.0" encoding="utf-8"?>

<Page x:ConnectionId='1'
    x:Class="App2.Pages.ListVlastnictviDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:App2.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="20">
                <TextBlock Text="Výpis LV" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

                <TextBlock Text="Part A (Vlastníci)" FontSize="20" FontWeight="SemiBold" Margin="0,10,0,5" />
                <ItemsControl x:ConnectionId='3'                                               >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Jméno:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Jmeno}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Příjmení:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Prijmeni}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Bydliště:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Bydliste}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Podíl (setin):" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding PodilSetin}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Part B (Nemovitosti)" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,5" />
                <ItemsControl x:ConnectionId='4'                                               >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Číslo popisné:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding CisloPopisne}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Ulice:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Ulice}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Katastrální území:" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding NazevKu}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Parcela:" FontWeight="SemiBold" />
                                    <TextBlock Text="St." Visibility="{Binding JeStavebni, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ParcelniCislo}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Part B Majitel (Omezení vlastnického práva)" FontSize="20" FontWeight="SemiBold"
                           Margin="0,20,0,5" />
                <ItemsControl x:ConnectionId='5'                                                      >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding Popis}" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Povinný:" />
                                    <TextBlock Text="{Binding TitulPovinny}" />
                                    <TextBlock Text="{Binding JmenoPovinny}" />
                                    <TextBlock Text="{Binding PrijmeniPovinny}" />
                                    <TextBlock Text="{Binding IcoPovinny}" />
                                    <TextBlock Text="{Binding RodneCisloPovinny}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Oprávněná parcela:" />
                                    <TextBlock Text="St." Visibility="{Binding JeStavebniOpravnena, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ParcelniCisloOpravnena}" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="{Binding CastParcelyOpravnena}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Datum zřízení:" />
                                    <TextBlock Text="{Binding DatumZrizeni}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Datum právních účinků:" />
                                    <TextBlock Text="{Binding DatumPravnichUcinku}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Part B Parcela (Jiné zápisy)" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,5" />
                <ItemsControl x:ConnectionId='6'                                                      >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding Popis}" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Oprávněná:" />
                                    <TextBlock Text="St." Visibility="{Binding JeStavebniOpravnena, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ParcelniCisloOpravnena}" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="{Binding CastParcelyOpravnena}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Povinná:" />
                                    <TextBlock Text="St." Visibility="{Binding JeStavebniPovinna, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ParcelniCisloPovinna}" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="{Binding CastParcelyPovinna}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Datum zřízení:" />
                                    <TextBlock Text="{Binding DatumZrizeni}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Datum právních účinků:" />
                                    <TextBlock Text="{Binding DatumPravnichUcinku}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Part C (Omezení vlastnického práva)" FontSize="20" FontWeight="SemiBold"
                           Margin="0,20,0,5" />
                <ItemsControl x:ConnectionId='7'                                               >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <TextBlock Text="{Binding Popis}" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Oprávněná:" />
                                    <TextBlock Text="St." Visibility="{Binding JeStavebniOpravnena, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ParcelniCisloOpravnena}" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="{Binding CastParcelyOpravnena}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Povinná:" />
                                    <TextBlock Text="St." Visibility="{Binding JeStavebniPovinna, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ParcelniCisloPovinna}" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="{Binding CastParcelyPovinna}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Datum zřízení:" />
                                    <TextBlock Text="{Binding DatumZrizeni}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Datum právních účinků:" />
                                    <TextBlock Text="{Binding DatumPravnichUcinku}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Part D (Jiné zápisy - Plomby)" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,5" />
                <ItemsControl x:ConnectionId='8'                                               >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Řízení:" />
                                    <TextBlock Text="{Binding TypRizeniZkratka}" />
                                    <TextBlock Text="-" />
                                    
                                    <HyperlinkButton x:ConnectionId='12' Content="{Binding CisloRizeni}"                         Padding="0"
                                                     BorderThickness="0" Background="Transparent" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="{Binding RokRizeni}" />
                                </StackPanel>
                                <TextBlock Text="{Binding NazevKatastralnihoUzemi}" />
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Parcela:" />
                                    <TextBlock Text="St." Visibility="{Binding JeStavebni, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ParcelniCislo}" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="{Binding CastParcely}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Part F (BPEJ)" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,5" />
                <ItemsControl x:ConnectionId='9'                                               >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Padding="10">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Parcela:" />
                                    <TextBlock Text="St." Visibility="{Binding JeStavebni, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    <TextBlock Text="{Binding ParcelniCislo}" />
                                    <TextBlock Text="/" />
                                    <TextBlock Text="{Binding CastParcely}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="Hodnota:" />
                                    <TextBlock Text="{Binding Hodnota}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

        <Button x:ConnectionId='2'
            Grid.Row="1"
            Content="Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="30"
            Margin="20"
                           />
    </Grid>
</Page>

