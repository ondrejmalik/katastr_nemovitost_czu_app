<?xml version="1.0" encoding="utf-8"?>
<crud:CrudPageBase
    x:Class="KNApp.Pages.Crud.ParcelaRowCrud"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:types="using:KNApp.Types"
    xmlns:crud="using:KNApp.Pages.Crud"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PageInfoBar="{x:Bind MessageInfoBar}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="24" Spacing="24">
                <TextBlock Text="Parcela" Style="{ThemeResource TitleTextBlockStyle}" />
                
                <!-- New Item -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Nová Parcela" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <Border CornerRadius="8" BorderThickness="1" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            Padding="16">
                        <Grid ColumnSpacing="12" RowSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Parcelní číslo:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                            <TextBox Text="{x:Bind NewItem.ParcelniCislo, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            
                            <TextBlock Text="Část parcely:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                            <TextBox Text="{x:Bind NewItem.CastParcely, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            
                            <TextBlock Text="Je stavební:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                            <CheckBox IsChecked="{x:Bind NewItem.JeStavebni, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"/>
                            
                            <TextBlock Text="Výměra (m2):" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
                            <TextBox Text="{x:Bind NewItem.VymeraMetruCtverecnich, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            
                            <TextBlock Text="Ulice:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
                            <TextBox Text="{x:Bind NewItem.Ulice, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            
                            <TextBlock Text="Číslo popisné:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0"/>
                            <TextBox Text="{x:Bind NewItem.CisloPopisne, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            
                            <TextBlock Text="KU ID:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0"/>
                            <TextBox Text="{x:Bind NewItem.KatastralniUzemiId, Mode=TwoWay}" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            
                            <TextBlock Text="BPEJ ID:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="7" Grid.Column="0"/>
                            <TextBox Text="{x:Bind NewItem.BpejId, Mode=TwoWay}" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            
                            <TextBlock Text="LV ID:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="8" Grid.Column="0"/>
                            <TextBox Text="{x:Bind NewItem.ListVlastnictviId, Mode=TwoWay}" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Stretch"/>
                            
                            <Button Content="Create" Click="CreateButtonClick" Style="{ThemeResource AccentButtonStyle}" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- List -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Seznam parcel" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <ItemsControl ItemsSource="{x:Bind Data, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="types:ParcelaRowData">
                                <Border CornerRadius="8" BorderThickness="1" 
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                        Padding="16" Margin="0,0,0,12">
                                    <Grid ColumnSpacing="12" RowSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="ID:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                                        <TextBlock Text="{x:Bind Id}" Style="{ThemeResource BodyTextBlockStyle}" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"/>

                                        <TextBlock Text="Parcelní číslo:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                                        <TextBox Text="{x:Bind ParcelniCislo, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"/>
                                        
                                        <TextBlock Text="Část parcely:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                                        <TextBox Text="{x:Bind CastParcely, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch"/>
                                        
                                        <TextBlock Text="Je stavební:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
                                        <CheckBox IsChecked="{x:Bind JeStavebni, Mode=TwoWay}" Grid.Row="3" Grid.Column="1"/>
                                        
                                        <TextBlock Text="Výměra (m2):" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
                                        <TextBox Text="{x:Bind VymeraMetruCtverecnich, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch"/>
                                        
                                        <TextBlock Text="Ulice:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0"/>
                                        <TextBox Text="{x:Bind Ulice, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch"/>
                                        
                                        <TextBlock Text="Číslo popisné:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0"/>
                                        <TextBox Text="{x:Bind CisloPopisne, Mode=TwoWay}" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch"/>
                                        
                                        <TextBlock Text="KU ID:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="7" Grid.Column="0"/>
                                        <TextBox Text="{x:Bind KatastralniUzemiId, Mode=TwoWay}" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Stretch"/>
                                        
                                        <TextBlock Text="BPEJ ID:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="8" Grid.Column="0"/>
                                        <TextBox Text="{x:Bind BpejId, Mode=TwoWay}" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Stretch"/>
                                        
                                        <TextBlock Text="LV ID:" Style="{ThemeResource BodyStrongTextBlockStyle}" VerticalAlignment="Center" Grid.Row="9" Grid.Column="0"/>
                                        <TextBox Text="{x:Bind ListVlastnictviId, Mode=TwoWay}" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Stretch"/>

                                        <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right">
                                            <Button Content="Update" Click="UpdateButtonClick" Tag="{x:Bind}" Style="{ThemeResource AccentButtonStyle}"/>
                                            <Button Content="Delete" Click="DeleteButtonClick" Tag="{x:Bind}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <InfoBar x:Name="MessageInfoBar" Grid.Row="0" Grid.RowSpan="2" IsOpen="False" VerticalAlignment="Bottom" Margin="24" />
    </Grid>
</crud:CrudPageBase>

