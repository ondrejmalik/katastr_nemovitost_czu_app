<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="KNApp.Pages.SpravniRizeniDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="24" Spacing="24">
                <TextBlock Text="Správní řízení" Style="{ThemeResource TitleTextBlockStyle}" />

                <!-- Předmět Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Předmět" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <Border CornerRadius="8" BorderThickness="1" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            Padding="16">
                        <ItemsControl ItemsSource="{x:Bind Data.Predmet, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnSpacing="12" RowSpacing="8" Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Text="Název:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <TextBlock Text="{Binding Nazev}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="0" Grid.Column="1"/>
                                        
                                        <TextBlock Text="Poznámka:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                        <TextBlock Text="{Binding Poznamka}" Style="{ThemeResource BodyTextBlockStyle}" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </StackPanel>

                <!-- Operace Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Operace" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <Border CornerRadius="8" BorderThickness="1" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            Padding="16">
                        <ItemsControl ItemsSource="{x:Bind Data.Operace, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnSpacing="12" RowSpacing="8" Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Datum:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <TextBlock Text="{Binding OperaceDatum}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="0" Grid.Column="1"/>

                                        <TextBlock Text="Popis:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                        <TextBlock Text="{Binding OperacePopis}" Style="{ThemeResource BodyTextBlockStyle}" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </StackPanel>

                <!-- Účastníci Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Účastníci" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <Border CornerRadius="8" BorderThickness="1" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            Padding="16">
                        <ItemsControl ItemsSource="{x:Bind Data.Ucastnici, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnSpacing="12" RowSpacing="8" Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Typ:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="0" Grid.Column="0"/>
                                        <TextBlock Text="{Binding TypUcastnika}" Style="{ThemeResource BodyTextBlockStyle}" Grid.Row="0" Grid.Column="1"/>

                                        <TextBlock Text="Jméno:" Style="{ThemeResource BodyStrongTextBlockStyle}" Grid.Row="1" Grid.Column="0"/>
                                        <TextBlock Text="{Binding UcastnikJmeno}" Style="{ThemeResource BodyTextBlockStyle}" TextWrapping="Wrap" Grid.Row="1" Grid.Column="1"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <Button
            Grid.Row="1"
            Content="Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="24"
            Click="GoBack" />
    </Grid>
</Page>