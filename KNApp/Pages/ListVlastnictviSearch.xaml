<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="KNApp.Pages.ListVlastnictviSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="24">
            <TextBlock Text="Vyhledat LV" Style="{ThemeResource DisplayTextBlockStyle}" HorizontalAlignment="Center" />
            
            <Border CornerRadius="8" BorderThickness="1" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    Padding="24" Width="400">
                <StackPanel Spacing="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Katastrální území" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                        <TextBox x:Name="KatastralniUzemiTextBox" PlaceholderText="Město Brno" />
                    </StackPanel>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="Číslo LV" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                        <TextBox x:Name="CisloLvTextBox" PlaceholderText="1" />
                    </StackPanel>

                    <Button Content="Search" Click="SearchLv" Style="{ThemeResource AccentButtonStyle}" HorizontalAlignment="Stretch" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <Button
            Content="Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="24"
            Click="GoBack" />
    </Grid>
</Page>